{
  "name": "ttbot",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:bot": "ts-node -r dotenv/config --files ./src/bot.ts",
    "dev:app": "ts-node -r dotenv/config --files ./src/app.ts",
    "build": "tsc",
    "test": "exit 0",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "db:start": "docker run -d --name ttbot_db --env-file .env -p 5101:5432 --rm postgres",
    "db:stop": "docker kill ttbot_db",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "cli": "ts-node -r dotenv/config ./src/cli/index.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "node-telegram-bot-api": "^0.30.0",
    "node-telegram-keyboard-wrapper": "^2.0.1",
    "nodemon": "^1.19.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.2",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "npm run dev:bot"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/js-yaml": "^3.12.1",
    "@types/node-telegram-bot-api": "^0.31.0",
    "npm-run-all": "^4.1.5",
    "tsconfig-paths": "^3.10.1"
  }
}
