{
  "name": "ttbot",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "env-cmd nodemon",
    "dev": "ts-node --files ./src/index.ts",
    "build": "tsc",
    "test": "exit 0",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "db-start": "docker run -d --name ttbot_db --env-file .env -p 5101:5432 --rm postgres",
    "db-stop": "docker kill ttbot_db",
    "typeorm": "ts-node ./node_modules/.bin/typeorm -f src/ormconfig.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "env-cmd": "^9.0.3",
    "node-telegram-bot-api": "^0.30.0",
    "node-telegram-keyboard-wrapper": "^2.0.1",
    "nodemon": "^1.19.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.2",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "npm run dev"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node-telegram-bot-api": "^0.31.0"
  }
}
